.detail-wrapper
	position fixed
	left 0
	top 0
	bottom 48px
	width 100%
	overflow-y scroll
	overflow-x hidden
	background-color #fff
	.header
		width 100%
		.back
			position absolute
			top 12px
			left 16px
			font-size 20px
			padding 10px
			color #fff
		.pic
			display block
			width 100%
			height 425px
		.name
			position relative
			display block
			padding 18px
			width 100%
			box-sizing border-box
			background-color #fff
			.dish
				font-size 14px
				line-height 14px
				height 14px
				font-weight 700
				color #07111b
			.sell-info
				padding-top 8px
				font-size 10px
				color #93999f
				line-height 10px
				.count
					margin-right 12px
			.price
				padding-top 18px
				font-size 14px
				font-weight 700
				line-height 24px
				color #f01414
				.new-price
					font-size 14px
				.old-price
					padding-left 4px
					color #93999f
					text-decoration line-through
			.cart-plus
				position absolute
				top 68px
				right 18px
				font-size 10px
				line-height 24px
				padding 0 12px
				color #fff
				background-color #00a0dc
				border-radius 12px
				&.fade-enter-active,&.fade-leave-active{
					transition opacity 0.1s
				}
				&.fade-enter,&.fade-leave-to{
					opacity 0
				}
				// z-index 2
			.cart-ctrl
				position absolute
				top 64px
				right 18px
	.introduction
		// background-color pink
		padding 18px
		.title
			font-size 14px
			font-weight 500
			color #07111b
			margin-bottom 6px
		.text
			display block
			font-size 12px
			font-weight 200
			color #4d555d
			line-height 24px
			padding 0 8px
	.rating
		padding 18px 0
		.title
			padding-left 18px
			font-size 14px
			font-weight 500
			color #07111b
			margin-bottom 6px
		.ratings-info
			.bar
				.filter
					margin 0 18px
					padding 18px 0
					border-bottom 1px solid rgba(7,17,27,0.14)
					.block
						display inline-block
						padding 8px 12px
						margin-right 8px
						font-size 12px
						line-height 16px
						color #4d555f
					.all
						background-color rgba(0,160,220,0.2)
						&.active
							color #fff
							background-color #00a9dc
					.recommend
						background-color rgba(0,160,220,0.2)
						&.active
							color #fff
							background-color #00a9dc
					.disclose
						background-color rgba(77,85,93,0.2)
						&.active
							color #fff
							background-color #4d555d
				.whether
					padding 12px 0 12px 18px
					font-size 12px
					width 100%
					color #93999f
					border-bottom 1px solid rgba(7,17,27,0.1)
					.icon-check_circle
						color #93999f
						font-size 24px
						vertical-align middle
						&.active
							color #00c850
			.contents
				margin 0 18px
				ul
					li
						padding 16px 0
						border-bottom 1px solid rgba(7,17,27,0.1)
						.avatar
							display flex
							color #93999f
							font-size 10px
							line-height 12px
							.time
								// display inline-block
								flex 1
							.name
								// display inline-block
								flex 1
								text-align right
								img
									border-radius 50%
						.rating-text
							padding-top 6px
							font-size 12px
							.hand
								line-height 24px
								&.up
									color #00a0dc
								&.down
									color #93999f
							.text
								color #07111b
								line-height 16px
								padding-left 4px
									