@import '../../common/stylus/mixin'
.goods-wrapper
	position absolute
	top 172px
	bottom 46px
	width 100%
	display flex
	.type-wrapper
		overflow-y scroll
		overflow-x hidden
		flex 0 0 80px
		width 80px
		ul
			background-color #f3f5f7
			li
				display table
				padding 0 12px
				height 54px
				width 56px
				vertical-align middle
				&.active
					background-color #fff
				&:last-child
					.name
						border none
				.name
					display table-cell
					vertical-align middle
					line-height 14px
					font-size 12px
					font-weight 200
					border-bottom 1px solid rgba(7,17,27,0.1)
					.icon
						display inline-block
						vertical-align middle
						width 12px
						height 12px
						background-size 100% 100%
						background-repeat no-repeat
						&.decrease
							bg-image('decrease_4')
						&.discount
							bg-image('discount_4')
						&.special
							bg-image('special_4')
						&.invoice
							bg-image('invoice_4')
						&.guarantee
							bg-image('guarantee_4')
	.foods-wrapper
		overflow-y scroll
		overflow-x hidden
		flex 1
		.whole
			.respective
				.name
					padding-left 12px
					border-left 2px solid #d9dde1
					heigth 26px
					line-height 26px
					font-size 12px
					background-color #f3f5f7
					color #93999f
				.foods-items
					.food
						position relative
						display flex
						margin 0 18px
						padding 18px 0
						border-bottom 1px solid rgba(7,17,27,0.1)
						.pic
							flex 0 0 57px
							display inline-block
						.description
							flex 1
							display inline-block
							padding-left 10px
							.dish
								margin 2px 0 8px 0
								font-size 14px
								line-height 14px
								height 14px
								font-weight 700
								coloer #07111b
							.descr
								font-size 10px
								color #93999f
								line-height 12px
								margin-bottom 8px
							.sell-info
								font-size 10px
								color #93999f
								line-height 10px
								.count
									margin-right 4px
							.price
								font-size 10px
								font-weight 700
								line-height 24px
								color #f01414
								.new-price
									font-size 14px
								.old-price
									padding-left 4px
									color #93999f
									text-decoration line-through
							.cart-ctrl
								position absolute
								right 0
								bottom 12px
&.move-enter-active,&.move-leave-active{
	transform: translate3d(0,0,0)
	transition: .4s
}
&.move-enter,&.move-leave-to{
	transform: translate3d(100%,0,0)
}